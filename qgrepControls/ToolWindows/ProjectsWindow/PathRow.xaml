<UserControl x:Class="qgrepControls.ToolWindows.PathRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:local="clr-namespace:qgrepControls.ToolWindows"
             mc:Ignorable="d"
             Width="Auto" Height="16" DataContext="{Binding}"
             d:DesignHeight="16" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary Source="/qgrepControls;component/ResourceDictionary.xaml" />
    </UserControl.Resources>
    <Grid Name="PathGrid" Style="{DynamicResource HoverableRow}" MouseEnter="PathGrid_MouseEnter" MouseLeave="PathGrid_MouseLeave">
        <StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left">
            <Label Name="Path" Style="{DynamicResource PanelEntrySecond}" Content="{Binding Path=Path}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="Auto" HorizontalAlignment="Right" Name="Icons" Margin="0,0,5,0">
            <Button Name="DeleteButton" Style="{StaticResource IconButton}" FontSize="15" Click="DeleteButton_Click" Content="✕" ToolTip="Delete folder" />
        </StackPanel>
    </Grid>
</UserControl>
