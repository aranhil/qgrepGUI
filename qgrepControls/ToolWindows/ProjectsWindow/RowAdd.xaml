<UserControl x:Class="qgrepControls.SearchWindow.RowAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:local="clr-namespace:qgrepControls.SearchWindow"
             mc:Ignorable="d"
             Width="Auto" Height="18" Visibility="Hidden"
             d:DesignHeight="16" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary Source="/qgrepControls;component/ResourceDictionary.xaml" />
    </UserControl.Resources>
    <Grid Name="AddGrid" Style="{DynamicResource HoverableRow}" MouseDown="AddGrid_MouseDown" >
        <Button Name="AddButton" Style="{StaticResource IconButton}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="0,-3,0,0" Click="AddButton_Click" Height="22">
            <Path Style="{DynamicResource AddIcon}"/>
        </Button>
    </Grid>
</UserControl>
